#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR
# cd ./TestC
echo "-----> BUILD DIR"
echo $BUILD_DIR
echo "-----> DIR CONTENTS"
#ls -lR
echo "-----> FULL PATH OF CDIR"
pwd


# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "----->not Compiling with Make runnig EXE directly"
# make 2>&1 | indent

echo "Running......."
#echo "Running 2......."
uname -a
#rm /var/lib/dpkg/lock 
 #apt-get update
#echo "Updating sudo......."
#apt-get install boost
#apt-get install libaio1
#echo $LD_LIBRARY_PATH
#echo "Echoing LIBRARY_PATH path......"
#echo $LIBRARY_PATH
#echo "Echoing path......"
#echo $PATH

#config:set PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:Release/lib
#chmod +x ./bin/program

#ls /tmp/build/Release/lib/
echo "chmod to /tmp/build/Release/lib/*.*"
chmod 777 /tmp/build/Release/lib/*.*
echo "exporting to LD_LP"
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/tmp/build/Release/lib/
echo $PATH
cd
cd ./Release
pwd
#cd ./SvcController
echo "exporting to Path of tcp"
#ls 
echo $HOME

chmod 777 *

ln -s ./libcrypto++.so.9.0.0 ./libcrypto++.so.9
ln -s ./libcrypto++.so.9 ./libcrypto++.so

readlink ./libcrypto++.so
readlink ./libcrypto++.so.9

./SvcController

echo "Test completed"
