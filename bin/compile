#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR
# cd ./TestC
echo "-----> BUILD DIR"
echo $BUILD_DIR
echo "-----> DIR CONTENTS"
ls -lR
echo "-----> FULL PATH OF CDIR"
pwd


# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "----->not Compiling with Make runnig EXE directly"
# make 2>&1 | indent

echo "Running......."
echo "Running 2......."
uname -a
#rm /var/lib/dpkg/lock 
 #apt-get update
echo "Updating sudo......."
#apt-get install boost
#apt-get install libaio1
echo $LD_LIBRARY_PATH
echo "Echoing LIBRARY_PATH path......"
echo $LIBRARY_PATH
echo "Echoing path......"
echo $PATH
ls 
cd ./ISwitchTCPIP
echo $HOME
chmod 777 *
./ISwitchTCPIP

echo "Test completed"
